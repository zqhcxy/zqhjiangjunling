<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jiangjunling.zqh.zqhjiangjunling.MainActivity">

    <RelativeLayout
        android:id="@+id/loding_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <ImageView
            android:id="@+id/logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"/>

        <EditText
            android:id="@+id/loging_edit"
            android:layout_below="@+id/logo_iv"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="54dp"
            android:inputType="numberPassword"
            android:hint="@string/lock_password_jint_text"
            android:maxLines="1"/>

        <Button
            android:id="@+id/loging_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loging_edit"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:text="报"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/regit_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <EditText
            android:id="@+id/regit_lockkey_et"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:inputType="numberPassword"
            android:hint="设置阅读密码"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/regit_lockkey_again_et"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@+id/regit_lockkey_et"
            android:layout_marginTop="20dp"
            android:inputType="numberPassword"
            android:hint="再次设置阅读密码"
            android:maxLines="1"/>

        <Button
            android:id="@+id/regit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regit_lockkey_again_et"
            android:layout_marginTop="20dp"
            android:text="完成"/>
    </RelativeLayout>
</RelativeLayout>
